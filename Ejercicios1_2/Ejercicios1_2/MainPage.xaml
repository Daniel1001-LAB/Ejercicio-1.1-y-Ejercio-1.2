<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicios1_2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Azure" Padding="24" CornerRadius="0">
            <Label Text="Seleccione una opcion:" HorizontalTextAlignment="Center" TextColor="Black" FontSize="28"/>
        </Frame>

        <StackLayout Padding="2,2,2,2" HorizontalOptions="Center">
            <Button Text="Operaciones Aritmeticas" Padding="10,10,10,10" Margin="2,2,2,2"  BackgroundColor="Bisque" TextColor="Black" FontSize="18" Clicked="pageOperaciones">

            </Button>
            <Button Text="Datos de usuario" BackgroundColor="Bisque" Padding="10,10,10,10" Margin="2,2,2,2" TextColor="Black" FontSize="18" Clicked="pageDatos">

            </Button>
        </StackLayout>
    </StackLayout>
    
    

</ContentPage>
